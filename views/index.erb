<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/sorted_alphabetically">Sort Words Alphabetically</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/word/<%= rand(1..@words.length()) %>">Go to a Random Word</a>
      </li>
    </ul>
  </div>
</nav>

<div class="container content">
  <div class='container row'>
    <div class='col-md-6' id='words_list'>
      <h2>Dictionary:</h2>
      <ul>
        <% @words.each() do |word| %>
        <li><a href='/word/<%= word.id() %>'><%= word.word_input() %></a></li>
        <% end %>
      </ul>
    </div>

    <div class='col-md-6' id='add_word'>
      <h2>Add a new word to your dictionary:</h2>
      <form action='/word_form' method='post'>
        <div class='form-group'>
          <label for="inputted_word">Word:</label>
          <input type="text" name="inputted_word" id="inputted_word" class="form-control" required>
        </div>
        <div class='form-group'>
          <label for="inputted_picture">Add a picture if desired (enter a URL link):</label>
          <input type="text" name="inputted_picture" id="inputted_picture" class="form-control">
        </div>
        <button type="submit" class="btn btn-outline-primary" name="submit">Add Word</button>
      </form>
    </div>
  </div>
</div>
